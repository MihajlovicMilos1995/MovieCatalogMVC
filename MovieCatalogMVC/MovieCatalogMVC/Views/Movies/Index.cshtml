@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<form method="get" action="@Url.Action("Index")" data-ajax-update="#Movies"
    data-otf-ajax="true" data-otf-target="#Movies">
    <p>
        Title: @Html.TextBox("SearchString") <br />
    </p>

    <p>
        <input type="submit" value="Search" />
    </p>

</form>



